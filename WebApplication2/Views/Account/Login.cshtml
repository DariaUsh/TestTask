@model WebApplication2.Models.LoginModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    Layout = "_LayoutAccount";
}

<h2>@SharedLocalizer["HeaderLogin"]</h2>
<hr>
<form class="form-horizontal" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <div class="col-md-1">
                <label asp-for="Email">@SharedLocalizer["Email"]</label>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <span class="text-danger" asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <div class="col-md-1">
                <label asp-for="Password">@SharedLocalizer["Password"]</label>
            </div>
            <div class="col-md-4">
                <input class="form-control" asp-for="Password" />
            </div>
            <span class="text-danger" asp-validation-for="Password" />
        </div>
        <div class="form-group text-right">
            <div class="col-md-5">
                <a asp-action="Register" class="btn btn-default" asp-controller="Account">@SharedLocalizer["Register"]</a>
                <input class="btn btn-default" type="submit" value=@SharedLocalizer["Login"] />
            </div>
        </div>
    </div>
</form>



