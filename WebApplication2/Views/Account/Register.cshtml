@model WebApplication2.Models.RegisterModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    Layout = "_LayoutAccount";
}

<h2>@SharedLocalizer["Register"]</h2>
<hr>
<form class="form-horizontal" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <span class="text-danger">
                    @TempData["message"]
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="Name">@SharedLocalizer["Name"]</label><br />
            </div>
            <div class="col-md-4">
                <input class="form-control" type="text" asp-for="Name" />
            </div>
            <span class="text-danger" asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="Email">@SharedLocalizer["Email"]</label><br />
            </div>
            <div class="col-md-4">
                <input class="form-control" type="text" asp-for="Email" />
            </div>
            <span class="text-danger" asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="Password">@SharedLocalizer["Password"]</label><br />
            </div>
            <div class="col-md-4">
                <input class="form-control" asp-for="Password" />
            </div>
            <span class="text-danger" asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <label asp-for="ConfirmPassword">@SharedLocalizer["ConfirmPassword"]</label><br />
            </div>
            <div class="col-md-4">
                <input class="form-control" asp-for="ConfirmPassword" />
            </div>
            <span class="text-danger" asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group text-right">
            <div class="col-md-6">
                <input type="submit" class="btn btn-default" value=@SharedLocalizer["Register"] />
            </div>
        </div>
    </div>
</form>

